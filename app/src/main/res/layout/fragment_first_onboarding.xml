<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.onboarding.page.FirstOnboardingFragment">

    <ImageView
        android:id="@+id/iv_cover_onboarding_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_onboarding_one"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:src="@drawable/icon_onboarding_one"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_onboarding_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find your flight"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="@+id/iv_icon_onboarding_one"
        app:layout_constraintStart_toStartOf="@+id/iv_icon_onboarding_one"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_onboarding_one" />

    <TextView
        android:id="@+id/tv_subtitle_onboarding_one"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Easily book flights to your favorite destinations with our app!"
        android:textSize="14sp"
        android:textAlignment="center"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_onboarding_one" />

</androidx.constraintlayout.widget.ConstraintLayout>