<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_cover_onboarding_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_splash_screen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_onboarding_one"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:src="@drawable/icon_onboarding_one"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title_onboarding_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find you flight"
        android:layout_marginTop="16dp"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/iv_onboarding_one"
        app:layout_constraintStart_toStartOf="@+id/iv_onboarding_one"
        app:layout_constraintTop_toBottomOf="@+id/iv_onboarding_one" />

    <TextView
        android:id="@+id/tv_subtitle_onboarding_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Now no need to worry if you want to go anywere"
        app:layout_constraintStart_toStartOf="@id/tv_title_onboarding_one"
        app:layout_constraintEnd_toEndOf="@+id/tv_title_onboarding_one"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_onboarding_one" />

</androidx.constraintlayout.widget.ConstraintLayout>