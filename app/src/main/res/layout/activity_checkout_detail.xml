<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="HardcodedText,Overdraw"
    android:background="@color/grey"
    >


    <!-- Navbar -->
    <LinearLayout
        android:id="@+id/toolbar_detail_checkout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkpurple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:padding="10dp">


        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="4dp"
            android:src="@drawable/ic_back_2"
            app:tint="@color/md_theme_onPrimary"
            android:background="@drawable/bg_icon_round"
            tools:ignore="ContentDescription" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="18dp"
            android:text="@string/text_toolbar_detail_checkout"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="14sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail_checkout"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


<!--            flight go -->

            <LinearLayout
                android:id="@+id/detail_flight_go"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="9dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvDeparture"
                    android:layout_marginStart="16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta"
                    android:textSize="16sp"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_back"
                    android:rotation="180"
                    />

                <TextView
                    android:id="@+id/tvDestination"
                    android:textSize="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Melbourne"
                    android:textColor="@color/purple"
                    android:textStyle="bold"
                    />

                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="( "
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/tvHours"
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6h"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/tvDetailMinutes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45m"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_marginStart="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" )"
                    android:textSize="16sp"
                    android:textColor="#151515"
                    android:textStyle="bold"
                    />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:padding="10dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="5dp"
                android:outlineAmbientShadowColor="@color/cardview_dark_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:ignore="UnusedAttribute">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/detailTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="07.00"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                    <TextView
                        android:id="@+id/wib"
                        android:layout_marginStart="5dp"
                        android:layout_toEndOf="@id/detailTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="WIB"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/detailStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:textColor="@color/lightpurple"
                        android:textStyle="bold"
                        android:text="Keberangkatan" />
                    <TextView
                        android:layout_below="@id/detailTime"
                        android:id="@+id/detailDate"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3 Maret 2023" />
                    <TextView
                        android:layout_below="@id/detailDate"
                        android:id="@+id/detailAirport"
                        android:layout_marginBottom="20dp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Soekarno Hatta - Terminal 1A Domestik" />
                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0"
                        android:layout_below="@id/detailAirport"/>


                    <RelativeLayout
                        android:id="@+id/rl2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="20dp">

                        <ImageView
                            android:id="@+id/logoMaskapai"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_launcher_background"
                            tools:ignore="ContentDescription" />

                        <TextView
                            android:id="@+id/Maskapai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="5dp"
                            android:textColor="@color/black"
                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="Jet Air - Economy"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/kodeMaskapai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/Maskapai"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="JT - 203"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/infoMaskapai"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/kodeMaskapai"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="@string/detail_checkout_information"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/detailInfoBaggage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/infoMaskapai"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="Baggage 20 Kg"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/detailInfoCabin"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detailInfoBaggage"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"

                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="Cabin baggage 7 kg"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/detailInfoEntertaiment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/detailInfoCabin"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:layout_toEndOf="@id/logoMaskapai"
                            android:text="Baggage 20 Kg"
                            android:textColor="@color/black"/>


                    </RelativeLayout>
                    <View
                        android:layout_below="@id/rl2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />

                    <RelativeLayout
                        android:layout_below="@+id/rl2"
                        android:layout_marginTop="14dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/detailTimeArrived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="07.45"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/wib2"
                            android:layout_marginStart="5dp"
                            android:layout_toEndOf="@id/detailTimeArrived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="WIB"
                            android:textStyle="bold"
                            android:textColor="@color/black"/>

                        <TextView
                            android:layout_alignEnd="@id/detailTimeArrived"
                            android:id="@+id/detailStatusArrived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/lightpurple"
                            android:textStyle="bold"
                            android:text="Kedatangan" />
                        <TextView
                            android:id="@+id/detailDateArrived"
                            android:layout_below="@id/detailTimeArrived"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3 Maret 2023"
                            android:textColor="@color/black"/>
                        <TextView
                            android:layout_below="@id/detailDateArrived"
                            android:id="@+id/detailAirportArrived"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Melbourne International Airport" />
                    </RelativeLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!--            flight back -->


            <LinearLayout
                android:paddingTop="10dp"
                android:paddingBottom="200dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/detail_flight_go"
                android:layout_marginTop="24dp"
                tools:ignore="ObsoleteLayoutParam">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_detail_checkout_price_title"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:paddingTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textColor="@color/black"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:text="Adults"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/tvPriceAdult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 9.550.000"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tax"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/priceDetailTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 0"
                        android:textSize="14sp"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Promo"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/priceDetailPromo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IDR 0"
                        android:textColor="@color/black"/>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#D0D0D0" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="Total"
                            android:textSize="16sp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/detailPriceFlight"
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="IDR 1.200.000/pax"
                            android:textColor="@color/purple"
                            android:textSize="18sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        app:backgroundTint="@null"
        android:id="@+id/btnSubmit"
        android:padding="14dp"
        android:textAllCaps="false"
        android:text="@string/text_button_detail_checkout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>