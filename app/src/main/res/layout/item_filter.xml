<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_filter_condition_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/price_filter"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_strip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/between"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_filter_condition_1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_filter_condition_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cheap_filter"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@id/tv_strip"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>