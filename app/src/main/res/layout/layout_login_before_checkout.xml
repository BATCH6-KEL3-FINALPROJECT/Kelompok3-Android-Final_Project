<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/iv_scroll"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_horizontal_rule"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/id_clear"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/ic_clear"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_tiket_habis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/image_pesawat_history_order"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        app:layout_constraintBottom_toTopOf="@id/tv_login_before_checkout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_login_before_checkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_maaf_anda_harus_login_terlebih_dahulu"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="42dp"
        app:layout_constraintTop_toBottomOf="@id/iv_tiket_habis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSubmit"/>

    <Button
        android:id="@+id/btnSubmit"
        style="@style/buttonTheme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/bg_button"
        android:text="@string/text_masuk"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_login_before_checkout"/>
</androidx.constraintlayout.widget.ConstraintLayout>