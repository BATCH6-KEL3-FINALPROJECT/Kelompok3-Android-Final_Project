<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Ekonomi"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_price_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp.4.950.000"
        android:layout_marginTop="4dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tv_class"
        app:layout_constraintTop_toBottomOf="@id/tv_class" />

    <View
        android:id="@+id/line_search_now"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="?attr/colorOutline"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_price_class"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>